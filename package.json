{
  "name": "chronocrypt-kms",
  "version": "1.0.0",
  "description": "ChronoCrypt KMS - Elysia + Next.js Monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun --filter '*' dev",
    "dev:backend": "bun --filter apps/backend dev",
    "dev:web": "bun --filter apps/web dev",
    "build": "bun --filter '*' build",
    "build:backend": "bun --filter apps/backend build",
    "build:web": "bun --filter apps/web build",
    "start": "bun --filter '*' start",
    "lint": "bun --filter '*' lint",
    "lint:backend": "bun --filter apps/backend lint",
    "lint:web": "bun --filter apps/web lint",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "monorepo",
    "elysia",
    "nextjs",
    "typescript"
  ]
}
